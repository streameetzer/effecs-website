{
  "name": "@effecs/website",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "catalog": {
      "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
      "husky": "^9.1.7",
      "lint-staged": "^16.1.2",
      "prettier": "^3.6.2"
    }
  },
  "scripts": {
    "docusaurus": "bunx --bun docusaurus",
    "dev": "bunx --bun docusaurus start",
    "doc:build": "bunx --bun docusaurus build",
    "swizzle": "bunx --bun docusaurus swizzle",
    "deploy": "bunx --bun docusaurus deploy",
    "clear": "bunx --bun docusaurus clear",
    "serve": "bunx --bun docusaurus serve",
    "write-translations": "bunx --bun docusaurus write-translations",
    "write-heading-ids": "bunx --bun docusaurus write-heading-ids",
    "typecheck": "bunx --bun tsc",
    "format": "prettier . --write --experimental-cli",
    "add": "bun add",
    "remove": "bun remove",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@docusaurus/core": "3.8.1",
    "@docusaurus/preset-classic": "3.8.1",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.8.1",
    "@docusaurus/tsconfig": "3.8.1",
    "@docusaurus/types": "3.8.1",
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "docusaurus-plugin-typedoc": "^1.4.0",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "~5.6.2"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0"
  }
}
